{
  "name": "bridge-api",
  "version": "1.0.0",
  "description": "An online marketplace to outsource physical and remote tasks ",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node ./src/server.js",
    "start:dev": "nodemon --exec babel-node src/server.js",
    "test": "./node_modules/.bin/nyc mocha --require @babel/register ./src/tests/**/*.test.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && npm run build-babel",
    "build-babel": "babel -d ./build ./src -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adebayoileri/Bridge-API.git"
  },
  "author": "Adebayo ilerioluwa",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/adebayoileri/Bridge-API/issues"
  },
  "homepage": "https://github.com/adebayoileri/Bridge-API#readme",
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.16.0",
    "pg-connection-string": "^2.1.0",
    "@babel/register": "^7.7.7"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0"
  }
}
